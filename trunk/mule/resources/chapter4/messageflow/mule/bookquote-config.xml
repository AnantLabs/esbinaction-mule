<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:jms="http://www.mulesource.org/schema/mule/jms/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/jms/2.0 http://www.mulesource.org/schema/mule/jms/2.0/mule-jms.xsd">

    <spring:beans>
      <spring:bean name="activeMQConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <spring:property name="brokerURL" value="tcp://localhost:61616"/>
      </spring:bean>
    </spring:beans>	
 
	<jms:connector name="jmsConnector" connectionFactory-ref="activeMQConnectionFactory"/>
    
    <jms:jmsmessage-to-object-transformer name="JMSToObject"/>
    <jms:object-to-jmsmessage-transformer name="ObjectToJMS"/>
        
	<custom-transformer name="ISBNToXML" 
				class="esb.chapter4.messageflow.transformer.ISBNTransformer"/>
	<custom-transformer name="XMLToObject" 
				class="esb.util.framework.XMLToObjectTransformer">
		<spring:property name="targetClassName" value="esb.chapter4.messageflow.domain.BookQuote"/>         
	</custom-transformer>
		
	<model name="BookQuoteExample">
		<service name="BookQuoteLogger">
            <inbound>
                <inbound-endpoint address="jms://booksearch.input"/>
            </inbound>
            <component class="esb.chapter4.messageflow.mule.MessageLogger" />
            <outbound>
            	<multicasting-router>
            		<outbound-endpoint address="jms://amazon.input"/>
            		<outbound-endpoint address="jms://barnes.input"
            			transformer-refs="JMSToObject ISBNToXML ObjectToJMS"/>
            	</multicasting-router>
			</outbound>
        </service>
        
        <service name="AmazonResponseHandler">
        	<inbound>
                <inbound-endpoint address="jms://amazon.output"/>
            </inbound>
            <component class="esb.chapter4.messageflow.mule.MessageLogger" />
            <outbound>
				<outbound-pass-through-router>
					<outbound-endpoint address="vm://aggregateQuotes.input"
						transformer-refs="JMSToObject"/>
				</outbound-pass-through-router>
			</outbound>
        </service>
        
        <service name="BarnesResponseHandler">
        	<inbound>
                <inbound-endpoint address="jms://barnes.output"/>
            </inbound>
            <component class="esb.chapter4.messageflow.mule.MessageLogger" />
            <outbound>
				<outbound-pass-through-router>
					<outbound-endpoint address="vm://aggregateQuotes.input" 
						transformer-refs="JMSToObject XMLToObject"/>
				</outbound-pass-through-router>
			</outbound>
        </service>
        
        
        <service name="CheapestPriceCalculator">
        	<inbound>
        		<inbound-endpoint address="vm://aggregateQuotes.input"/>
        		<custom-inbound-router class="esb.chapter4.messageflow.mule.BookQuoteAggregator"/>
            </inbound>
            <component class="esb.chapter4.messageflow.mule.CheapestPriceCalculator"/>
            <outbound>
            	<outbound-pass-through-router>
            		<outbound-endpoint address="jms://booksearch.output"/>
            	</outbound-pass-through-router>
            </outbound>
        </service>
	</model>
</mule>
