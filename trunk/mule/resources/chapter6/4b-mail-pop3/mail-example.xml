<?xml version="1.0" encoding="UTF-8"?>
<mule:mule xmlns="http://www.springframework.org/schema/beans"
  xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
  xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:simple="http://www.mulesource.org/schema/mule/simple/2.0"
  xmlns:pop3="http://www.mulesource.org/schema/mule/pop3/2.0"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/pop3/2.0 http://www.mulesource.org/schema/mule/smtp/2.0/mule-pop3.xsd"> 

  <mule:model name="mail-model">
    <mule:service name="file-reader">
      <mule:inbound>
        <mule:inbound-endpoint address="pop3://tijs:tijs@localhost:10110">
          <mule:properties>
            <entry key="checkFrequency" value="5000"/>
            <entry key="deleteReadMessages" value="true"/>
          </mule:properties>
        </mule:inbound-endpoint>
      </mule:inbound>
      <mule:pass-through-component />
      <mule:outbound>
        <mule:outbound-pass-through-router>
          <mule:outbound-endpoint address="file://work-mule/chapter6/4b/out"/>
        </mule:outbound-pass-through-router>
      </mule:outbound>
    </mule:service>
  </mule:model>

</mule:mule>
