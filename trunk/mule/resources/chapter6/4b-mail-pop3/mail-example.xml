<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
  xmlns:pop3="http://www.mulesource.org/schema/mule/pop3/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/file/2.0 http://www.mulesource.org/schema/mule/file/2.0/mule-file.xsd
               http://www.mulesource.org/schema/mule/pop3/2.0 http://www.mulesource.org/schema/mule/pop3/2.0/mule-pop3.xsd"> 

  <pop3:connector name="pop3Connector" checkFrequency="5000" deleteReadMessages="false"/>

  <model name="mail-model">
    <service name="mail-sender">
      <inbound>
        <pop3:inbound-endpoint host="localhost" user="tijs" password="tijs" port="10110" />
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <file:outbound-endpoint path="work-mule/chapter6/4b/out"/>
        </outbound-pass-through-router>
      </outbound>
    </service>
  </model>

</mule>
