    serialiseObjects=""/> x         
    </beans>
    
  -->
  
 
    <bean name="fileFilter" class="org.mule.providers.file.filters.FilenameWildcardFilter">
      <property name="pattern" value="*.txt"></property>
    </bean>
  

  <mule:model name="file-model">
    <mule:service name="file-reader-writer">
      <mule:pass-through-component />
      <mule:inbound-router>
        <mule:inbound-endpoint address="file://work/chapter6/1a/in">
          <mule:properties>
            <entry key="pollingFrequencey" value="3000" />
            <entry key="autoDelete" value="true" />
          </mule:properties>
          <mule:filter ref="fileFilter"/>
        </mule:inbound-endpoint>
      </mule:inbound-router>
      <mule:outbound-router>
        <mule:outbound-pass-through-router>
          <mule:outbound-endpoint address="file://work/chapter6/1a/out">
            <mule:properties>
              <entry key="outputPattern" value="${DATE:HH-mm-ss.SSS}-${UUID}-${SYSTIME}-${COUNT}.dat" />
            </mule:properties>
          </mule:outbound-endpoint>
        </mule:outbound-pass-through-router>
      </mule:outbound-router>
    </mule:service>
  </mule:model>

</mule:mule>
