<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:jms="http://www.mulesource.org/schema/mule/jms/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/jms/2.0 http://www.mulesource.org/schema/mule/jms/2.0/mule-jms.xsd">

  <!--  the JMS configuration, tell mule where we want to connect to for JMS -->
  <jms:activemq-connector name="jmsConnection"
      brokerURL="tcp://localhost:61616"
      acknowledgementMode="DUPS_OK_ACKNOWLEDGE"
      specification="1.1"
      maxRedelivery="1" />   

  <jms:activemq-connector name="topicConnection"
      brokerURL="tcp://localhost:61616"
      durable="false" />
      
  <model name="TopicModel">
    <service name="queue-to-topic">
      <inbound>
        <jms:inbound-endpoint queue="in.queue" connector-ref="jmsConnection"/>
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <jms:outbound-endpoint topic="topic1" connector-ref="topicConnection"/>
        </outbound-pass-through-router>
      </outbound>
    </service>

    <service name="topic-to-queue1">
      <inbound>
        <jms:inbound-endpoint topic="topic1" connector-ref="topicConnection"/>
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <jms:outbound-endpoint queue="out1.queue" connector-ref="jmsConnection"/>
        </outbound-pass-through-router>
      </outbound>
    </service>
    
    <service name="topic-to-queue2">
      <inbound>
        <jms:inbound-endpoint topic="topic1" connector-ref="topicConnection"/>
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <jms:outbound-endpoint queue="out2.queue" connector-ref="jmsConnection"/>
        </outbound-pass-through-router>
      </outbound>
    </service>
    
    <service name="topic-to-queue3">
      <inbound>
        <jms:inbound-endpoint topic="topic1" connector-ref="topicConnection"/>
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <jms:outbound-endpoint queue="out3.queue" connector-ref="jmsConnection"/>
        </outbound-pass-through-router>
      </outbound>
    </service>
  </model>
</mule>
