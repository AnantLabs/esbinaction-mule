<?xml version="1.0" encoding="UTF-8"?>
<mule:mule xmlns="http://www.springframework.org/schema/beans"
  xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
  xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ftp="http://www.mulesource.org/schema/mule/ftp/2.0"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/ftp/2.0 http://www.mulesource.org/schema/mule/ftp/2.0/mule-ftp.xsd">
 
  <mule:model name="ftp-model">
    <mule:service name="ftp-reader">
      <mule:inbound>
        <mule:inbound-endpoint address="ftp://bob:123password@localhost:2121/">
          <mule:properties>
            <entry key="pollingFrequency" value="10000" />
            <entry key="validateConnections" value="true" />
            <entry key="passive" value="false" />
          </mule:properties>
        </mule:inbound-endpoint>
      </mule:inbound>
      <mule:bridge-component />
      <mule:outbound>
        <mule:outbound-pass-through-router>
        <mule:outbound-endpoint address="file://work-mule/chapter6/5b/out" />
        </mule:outbound-pass-through-router>
      </mule:outbound>
    </mule:service>
  </mule:model>


</mule:mule>
