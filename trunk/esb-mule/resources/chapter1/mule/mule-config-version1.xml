<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="FileExample" version="1.0">

    <model name="fileExample">
        <mule-descriptor name="FileUMO" implementation="org.mule.components.simple.PassThroughComponent">
            <inbound-router>
                <endpoint address="file://inbox"/>
            </inbound-router>
            <outbound-router>
                <router className="org.mule.routing.outbound.OutboundPassThroughRouter">
                    <endpoint address="file://outbox">
                    	<properties>
                    		<property name="outputPattern" value="output.xml"/>
                    	</properties>
                    </endpoint>
                </router>
            </outbound-router>
        </mule-descriptor>
    </model>
</mule-configuration>
