<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
		http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd">



	<spring:bean id="ResponseOptions" class="esb.chapter4.component.ResponseOptions">
		<spring:property name="options">
			<spring:map>
				<spring:entry key="EAI" value="Where have you been lately?"/>
				<spring:entry key="XML" value="The lingua franca!"/>
				<spring:entry key="Open Source" value="Yes it's free!"/>
				<spring:entry key="ESB" value="Yes, yes!"/>
				<spring:entry key="other" value="Try again."/>
			</spring:map>
		</spring:property>
	</spring:bean>
	
	<model name="SimpleSpringExample">
        <service name="SimpleSpringComponent">
            <inbound>
                <inbound-endpoint address="stdio://System.in?promptMessage=Enter a word:"/>
            </inbound>
            <component>
              <singleton-object  class="esb.chapter4.component.SimpleSpringComponent">
                <property key="responseOptions" value-ref="ResponseOptions"/>
              </singleton-object>
            </component>
            <outbound>
            	<outbound-pass-through-router>
            		<outbound-endpoint address="stdio://System.out"/>
            	</outbound-pass-through-router>
			</outbound>
		</service>
	</model>
</mule>

