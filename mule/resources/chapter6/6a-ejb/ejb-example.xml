<?xml version="1.0" encoding="UTF-8"?>
<mule:mule xmlns="http://www.springframework.org/schema/beans"
  xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
  xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ejb="http://www.mulesource.org/schema/mule/ejb/2.0"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/ejb/2.0 http://www.mulesource.org/schema/mule/ejb/2.0/mule-ejb.xsd">

    <ejb:connector name="open-ejb" 
                   jndiInitialFactory="org.openejb.client.RemoteInitialContextFactory" 
                   jndiProviderUrl="ejbd://localhost:4201"
                   securityPolicy="resources/chapter6/6a-ejb/wideopen.policy"/>     

  <mule:model name="file-model">
    <mule:service name="file-reader-writer">
      <mule:inbound>
        <mule:inbound-endpoint address="file://work-mule/chapter6/6a/in">
          <mule:byte-array-to-string-transformer/>
          <mule:custom-transformer class="esb.chapter6.QueryTransformer"/>
        </mule:inbound-endpoint>
      </mule:inbound>
      <mule:pass-through-component />
      <mule:outbound>
        <mule:chaining-router>
          <mule:outbound-endpoint address="ejbd://localhost:4201/PersonServiceImplRemote?method=searchPersons"/>
          <mule:outbound-endpoint address="file://work-mule/chapter6/6a/out"/>
        </mule:chaining-router>
      </mule:outbound>
    </mule:service>
  </mule:model>

</mule:mule>
