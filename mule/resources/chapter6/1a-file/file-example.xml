<?xml version="1.0" encoding="UTF-8"?>
<mule:mule xmlns="http://www.springframework.org/schema/beans"
  xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
  xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:simple="http://www.mulesource.org/schema/mule/simple/2.0"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">
  
 
    <bean name="fileFilter" class="org.mule.transport.file.filters.FilenameWildcardFilter">
      <property name="pattern" value="*.txt"></property>
    </bean>
  

  <mule:model name="file-model">
    <mule:service name="file-reader-writer">
      <mule:inbound>
        <mule:inbound-endpoint address="file://work-mule/chapter6/1a/in">
          <mule:properties>
            <entry key="pollingFrequencey" value="3000" />
            <entry key="autoDelete" value="true" />
          </mule:properties>
          <mule:filter ref="fileFilter"/>
        </mule:inbound-endpoint>
      </mule:inbound>
      <mule:bridge-component/>
      <mule:outbound>
        <mule:outbound-pass-through-router>
          <mule:outbound-endpoint address="file://work-mule/chapter6/1a/out">
            <mule:properties>
              <entry key="outputPattern" value="${DATE:HH-mm-ss.SSS}-${UUID}-${SYSTIME}-${COUNT}.dat" />
            </mule:properties>
          </mule:outbound-endpoint>
        </mule:outbound-pass-through-router>
      </mule:outbound>
    </mule:service>
  </mule:model>

</mule:mule>
