<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
  xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:jms="http://www.mulesource.org/schema/mule/jms/2.0"
  xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/file/2.0 http://www.mulesource.org/schema/mule/file/2.0/mule-file.xsd
               http://www.mulesource.org/schema/mule/jms/2.0 http://www.mulesource.org/schema/mule/jms/2.0/mule-jms.xsd">

  <!--  the JMS configuration, tell mule where we want to connect to for JMS -->
  <jms:activemq-connector name="jmsConnection"
      brokerURL="tcp://localhost:61616" />

  <file:connector name="fileConnector" streaming="false" />

  <model name="jms-model">
    <service name="file-to-topic">
      <inbound>
        <file:inbound-endpoint
            path="work-mule/chapter6/2b/in"
            pollingFrequency="3000" />
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <jms:outbound-endpoint topic="topic1" />
        </outbound-pass-through-router>
      </outbound>
    </service>

    <service name="topic-to-file-1">
      <inbound>
        <jms:inbound-endpoint topic="topic1" />
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <file:outbound-endpoint
              path="work-mule/chapter6/2b/out-1" />
        </outbound-pass-through-router>
      </outbound>
    </service>

    <service name="topic-to-file-2">
      <inbound>
        <jms:inbound-endpoint topic="topic1" />
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <file:outbound-endpoint
              path="work-mule/chapter6/2b/out-2" />
        </outbound-pass-through-router>
      </outbound>
    </service>

    <service name="topic-to-file-3">
      <inbound>
        <jms:inbound-endpoint topic="topic1" />
      </inbound>
      <outbound>
        <outbound-pass-through-router>
          <file:outbound-endpoint
              path="work-mule/chapter6/2b/out-3" />
        </outbound-pass-through-router>
      </outbound>
    </service>
  </model>

</mule>
